<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ratingFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="670dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="@string/how_to_rate_this_app"
            android:textColor="#072449" />

        <!-- WebView -->
        <WebView
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:id="@+id/webView"
            android:layout_marginTop="50dp"/>
        <!-- Like and Dislike Buttons with Counts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="300dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/like_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/like"
              />

            <TextView
                android:id="@+id/like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0"
                android:textSize="18sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

            <ImageButton
                android:id="@+id/dislike_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/like2" />

            <TextView
                android:id="@+id/dislike_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0"
                android:textSize="18sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
        </LinearLayout>
        <!-- Rating Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:fontFamily="sans-serif"
                android:text="@string/rate_our_app"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating"
                android:progressBackgroundTint="#D8D7D7"
                android:progressTint="#DACA42"
                android:layout_marginTop="30dp"
                android:layout_marginStart="40dp"
                android:numStars="5"
                android:stepSize="1.0" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/submit"
                android:text="@string/submit"
                android:layout_marginStart="60dp"
                android:textSize="20sp"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/thank"
                android:textAlignment="center"
                android:text=""
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="#29367C"
                android:textSize="25sp"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal" />



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
